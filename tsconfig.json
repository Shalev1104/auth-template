{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "composite": true,

    "paths": {
      "@server": ["src/server"],
      "@server/*": ["src/server/*"],
      "@auth": ["src/auth"],
      "@auth/*": ["src/auth/*"],
      "@common": ["src/common"],
      "@common/*": ["src/common/*"]
    }
  }
}
